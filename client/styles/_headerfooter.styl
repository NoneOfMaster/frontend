@import '_colorsfontsstyles.styl'

#header
  display flex
  background-color logoBeige
  margin-bottom 2rem

.logo
  display block
  padding .4rem 2.5rem
  > a
    text-decoration none
    font-family lobster
    color logoLightBlue
    font-size 2rem
    > span
      font-family logoBlocky
      font-size 3rem
      color navBarNavy
      
#nav-bar
  display flex
  justify-content flex-end
  align-items center
  width 100%
  font-family slimBlocky
  font-size 1.2rem
  background-color navBarNavy
  > .active
    color: logoLightBlue !important
  > a:hover
    cursor pointer
  > a
    text-decoration none
    color white
    margin 0 2rem
  > a:last-child
    margin-right 4rem

#footer::before
  background-color blue
#footer
  position absolute
  display flex
  justify-content center
  align-items center
  bottom 0
  width 100%
  height 3rem
  background-color navBarNavy
  color white
  text-align center
  font-family lobster
  font-size 1.2rem
