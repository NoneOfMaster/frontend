@import '_colorsfontsstyles.styl'

#home-display-boxes
  // flexbox tut: https://www.youtube.com/watch?v=G7EIAgfkhmg
  display flex
  flex-wrap wrap
  max-width 64rem
  justify-content center
  margin 2rem auto
  > div
    box-shadow lightGreyShadow
    background-color logoBeige
    border 1px solid navBarNavy
    margin 0 .5rem 1rem
    width 20rem
    height 15rem
    text-align center
    > h1
      margin-bottom 1px
    @media (max-width: 42rem)
      width 25rem
      margin .5rem auto
      min-width 16rem
    > table
      display inline-block
      width 100%
      height 12.35rem
      overflow-y scroll
      font-family slimBlocky
      font-size 1rem
      color blue
      background-color lightRed
      border-top 1px solid navBarNavy
      > tbody
        display inline-block
        width 100%
        >tr
          border-bottom 1px solid navBarNavy
          display inline-block
          width 100%
          > td
            display inline-block
            line-height 1.7rem
            overflow-wrap break-word
            float left
          > .trending-url-cell
            background-color logoLightBlue
            width 80%
          > .trending-url-count-cell
            min-width 20%
    > h1
      color navBarNavy
      font-family lobster
      margin 0 1rem
  > .chat-box
    background-color lightGrey
    border 1px solid mediumGrey
    font-family slimBlocky
    > div
      margin .4rem
      border 1px solid mediumGrey
      padding 0 .5rem
    > #chat-window
      text-align left
      height 12.1rem
      background-color white
      margin-bottom .2rem
      overflow-y auto
      overflow-wrap break-word
      //dummy users
      > p:nth-child(even)::before
        content: "Joe1983: "
        color blue
        font-weight bold
      > p:nth-child(odd)::before
        content: "Kar48: "
        color red
        font-weight bold
    > #message-form
        margin .2rem .4rem .5rem
      > input
        display inline-block
        border 1px solid mediumGrey
      > form input[type=text]
        width 80%
        padding 0 .5rem
      > form input[type=submit]
        width 20%
    > #no-chat-mask
      display none
    > #chat-mask
      position absolute
      margin 0
      width inherit
      height inherit
      border 1px solid rgba(0, 0, 0, .7)
      background-color rgba(0, 0, 0, .7)
      > #user-icon
        border none
        width 8rem
        height 8rem
        margin 2rem auto 0
        background-image url(../data/user-silhouette.png)
        background-size cover
        background-position center
        background-repeat no-repeat
      > h4
        color white
        font-family slimBlocky
        font-size 1.2rem
        position: relative;
        top: -6rem;
  > .chat-mask
      border 1px solid rgba(0, 0, 0, .7)


